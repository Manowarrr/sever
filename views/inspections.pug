extends layout

include mixins/_inspectionTableRow

block content
  .row
    .col-md-12
      .card
        .card-header.card-header-rose.card-header-icon
          .card-icon
            i.material-icons assignment
          h4.card-title Список осмотров
        .card-body
          .material-datatables
            table.table.table-shopping.table-no-bordered.table-hover(id='inspectionTable' width='100%' cellspacing='0' style='width:100%')
              thead
                tr
                  th.disabled-sorting.text-left Название
                  th.text-center Дата
                  th.text-center Договор
                  th.disabled-sorting.text-center Файл
                  th.text-center 
              tbody
                each inspection in inspections
                  +inspectionTableRow(inspection)