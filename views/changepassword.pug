extends mainLayout

block content
  .row
    .col-md-6.ml-auto.mr-auto
      .card.card-signup
        h2.card-title.text-center 
        .card-body
          form.form(method='POST' action='/changepassword')
            .form-group.has-default
              .input-group
                .input-group-prepend
                  span.input-group-text
                    i.material-icons face
                input.form-control(type='text' name='name' id='name' placeholder='Имя...')
            .form-group.has-default
              .input-group
                .input-group-prepend
                  span.input-group-text
                    i.material-icons mail
                input.form-control(type='password' name='password' id='password' placeholder='Введите пароль')
            .form-group.has-default
              .input-group
                .input-group-prepend
                  span.input-group-text
                    i.material-icons mail
                input.form-control(type='password' name='password-confirm' id='password-confirm' placeholder='Повторите пароль')
            .text-center.text-white
              button.btn.btn-primary.btn-round.mt-4(type='submit') Изменить пароль 